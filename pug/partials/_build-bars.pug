h2.pie-picker(v-if="chart.type == 'bars'")
  span show me
  

  select(v-model="bars.amounts[0]" v-on:change="buildBars()")
    option(v-for='opt in bars.barSizes' v-bind:value="opt.value") {{opt.text}}
  input(type="text" v-model="bars.labels[0]")
  
  span and
  
  select(v-model="bars.amounts[1]" v-on:change="buildBars()")
    option(v-for='opt in bars.barSizes' v-bind:value="opt.value") {{opt.text}}
  input(type="text" v-model="bars.labels[1]")
  
  
  span(v-if="bars.labels[1]")
    span and
      select(v-model="bars.amounts[2]" v-on:change="buildBars()")
        option(v-for='opt in bars.barSizes' v-bind:value="opt.value") {{opt.text}}
      input(type="text" v-model="bars.labels[2]" placeholder="that's it." )
  
  span(v-if="bars.labels[2]")
    span and
      select(v-model="bars.amounts[3]" v-on:change="buildBars()" v-show="bars.labels[3]")
        option(v-for='opt in bars.barSizes' v-bind:value="opt.value") {{opt.text}}
      input(type="text" v-model="bars.labels[3]" placeholder="that's it." )
  
  span(v-if="bars.labels[3]")
    span and
      select(v-model="bars.amounts[4]" v-on:change="buildBars()" v-show="bars.labels[4]")
        option(v-for='opt in bars.barSizes' v-bind:value="opt.value") {{opt.text}}
      input(type="text" v-model="bars.labels[4]" placeholder="that's it." )
  
  span(v-if="bars.labels[4]")
    span and
      select(v-model="bars.amounts[5]" v-on:change="buildBars()" v-show="bars.labels[5]")
        option(v-for='opt in bars.barSizes' v-bind:value="opt.value") {{opt.text}}
      input(type="text" v-model="bars.labels[5]" placeholder="that's it." )

  //-span
    button(v-on:click="buildBars()") build bars